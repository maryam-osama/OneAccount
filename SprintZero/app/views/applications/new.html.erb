<%= form_for :application, url: applications_path do |f| %>

 <div class="page-header"style="width:50%; margin-left: 305px ">
        <h1 style=" text-align:center; color:white;">Please enter the following information </h1></h1>
 </div>
 <div class="row" style="width:50%; margin-left: 290px; ">
      <div class="col-sm-4"  style="width:105%;">
      <div class="panel panel-default" style= " background-color:gray; color: gray;" </div>
                   
     <% if @application.errors.any? %>
     <div id="error_explanation">
       <h2>
        <%= pluralize(@application.errors.count, "error") %> prohibited
        this application from being saved:
       </h2>
       <ul>
        <% @application.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="panel-body" >
  <p>
    <%= f.text_field :appname, :placeholder => "Application Name" %>
  </p>
  

<% @category_options = [] %>
<% @categories = Category.all %>

<% @categories.each do |category| %>
   <% @category_option = [category.name, category.name] %>
   <% @category_options.push(@category_option) %>
<% end %>

  <p>
    <%= f.select(:category_name) do %>
    <%= options_for_select(@category_options) %>
    <% end %>
  </p>
 
  <p>
    <%= f.text_area :description, :size => "45x15", :placeholder => "Please state your application description here "%>
  </p>
  
  <p>
    <%= f.text_field :price ,:placeholder => "Application price" %>
  </p>
 
  <p>
    <%= f.text_field :appstore_url ,:placeholder => " Application url on Appstore " %>
  </p>
  
  <p>
    <%= f.text_field :playstore_url ,:placeholder => "Application url on Playstore" %>
  </p>
  
  <p>
    <%= f.text_field :windows_url ,:placeholder => " Application url on Windows Store " %>
  </p>
  
<%= f.submit %>
<% end %>
</div>
</body>
