    <div id="error_explanation">
      <h2>
        Invalid Request!
      </h2>
      <ul>
        <% @request.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
  
   <div class= "form" style=" margin-left:10px;">
     <p>
       <%= f.text_area :reason, :size => "90x25" %>
   <div class= "email"> <%= f.text_area :user_email, :value => current_user.email %> </div>
     </p>
 
    <p>
  
   <%= f.submit 'Save Request' , :class => 'btn btn-sucess' %>
    </p>
   </div>
   
  
<% end %>
